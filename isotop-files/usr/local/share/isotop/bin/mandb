#!/bin/sh

set -e

[ "$1" = "-h" ] && cat << EOF && exit 0
${0##*/} :
    populates the db used by dman
    run this after system and package upgrade
    or package installation
EOF

db=/var/db/man.db
sp='/usr/share/man/ /usr/local/man/ /usr/X11R6/man/'

/usr/libexec/locate.updatedb \
	--fcodes=$db \
	--searchpaths="$sp"