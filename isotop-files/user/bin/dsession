#!/bin/sh
test -s $HOME/.dmenurc && . $HOME/.dmenurc


prompt="Session:"
_shutdown="Shutdown"
_reboot="Reboot"
_suspend="Suspend"
_hibernate="Hibernate"
_lock="Lock"
_exit="Exit"
_help="Help"
case $LANG in
	fr*)
		_shutdown="Eteindre"
		_reboot="Redemarrer"
		_suspend="Suspendre"
		_hibernate="Hiberner"
		_lock="Verouiller"
		_exit="Quitter"
		_help="Aide"
	;;
esac

res=$(echo "$_shutdown
$_reboot
$_suspend
$_hibernate
$_lock
$_exit
$_help" | dmenu \
	-l ${l} \
	-i \
	-fn "${fn}" \
	-nb "${nb}" \
	-nf "${nf}" \
	-sb "${sb}" \
	-sf "${sf}" \
	-p "${prompt}" \
)
echo $res

case "$res" in
	$_shutdown)  doas /sbin/shutdown -hp now ;;
	$_reboot)    doas /sbin/reboot ;;
	$_suspend)   doas /usr/sbin/zzz ;;
	$_hibernate) doas /usr/sbin/ZZZ ;;
	$_lock)      xlock ;;
	$_exit)      pkill dwm ;;
	$_help)      xterm -e man isotop ;;
esac

