#!/bin/sh

DEVCLASS=${1}
DEVNAME=${2}

case "${DEVCLASS}" in
		0)
			if [ -n "$(echo $DEVNAME | grep -o "ugen[0-9]")" ]; then
				addr=$(usbdevs -vd | \
					grep -B4 $DEVNAME | \
					head -n1 | \
					cut -d' ' -f 2\
					sed 's/://')
				chown _cups /dev/${DEVNAME}.* $addr
			fi
		;;

        2)
			/usr/local/libexec/hotplug-diskmount attach -f dirty -m 0777 "${DEVNAME}"
        ;;
esac
