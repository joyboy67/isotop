color activeborder "#6a96ca"
color inactiveborder "#000"
color font "#fff"
color selfont "#000"
color menubg "#000"
color menufg "#6a96ca"
color urgencyborder "#ffb6b0"

borderwidth 2
gap 0 0 0 0     # no margin
fontname "DejaVu Sans Mono:pixelsize=14"

# Options
moveamout 30
snapdist 20
sticky yes
command term xterm
command lock "xlock -mode space"

# Windows rules
ignore "dmenu"
ignore "Dunst"
ignore "xclock"
ignore "netwmpager"
ignore "conky"

# Groups, find them by clicking ong a window after running "xprop"
# autogroup n "name,class"
#autogroup 2 Mail
#autogroup 1 "Navigator", "Firefox"
#autogroup 1 "chromium-browser", "Chromium-browser"

# Mouse
# Disable resize with middle button
unbind-mouse M-2 
unbind-mouse M-3
# Alt+ right click to resize
bind-mouse M-3 window-resize

# scroll on background change volume
bind-mouse 0-4 "mixerctl outputs.master=+10"
bind-mouse 0-5 "mixerctl outputs.master=-10"

# keyboard
bind-key M-F4  window-delete

# Move : M-h/j/k/l
# Resize : M-S-h/j/k/l
# Move on screen edge
bind-key MS-j window-snap-down
bind-key MS-k window-snap-up
bind-key MS-h window-snap-left
bind-key MS-l window-snap-right

# alt-space cycle groups
bind-key M-space group-cycle
bind-key MS-space group-rcycle

# tiling !!!
bind-key M-t window-vtile
bind-key MS-t window-htile

# app menu alt-f2
bind-key M-F2 menu-exec
# dmenu_run
bind-key M-p 'dmenu_run_i' 
# Find window
bind-key M-f menu-window
# label with M-C-n

# shortcuts
M-s dsch
M-x dfm

# MENU
command " ___CWMWINMENU" ""
command "   -  ___CWMMINWIN " "xdotool selectwindow windowminimize"
command "   +  ___CWMMAXMIN " "xdotool selectwindow windowsize 100% 100% windowmove 0 0"
command "   x  ___CWMCLOSEWIN " "xdotool selectwindow windowkill"
command "   =  ___CWMGROUPWIN " "dgroupwin"
command "  [ ] ___CWMSHOWDESKTOP "sh -c 'for i in $(xdotool search --onlyvisible .); do xdotool windowminimize $i; done'"
command " ___CWMSHORTCUTS" ""
command "   ▸ ___CWMWEB " web 
command "   ▸ ___CWMMAILS " claws-mail 
command "   ▸ ___CWMFILES " pcmanfm
command "   ▸ ___CWMOFFICE " libreoffice
command "   ▸ ___CWMMUSIC " deadbeef
command "   ▸ ___CWMXTERM " xterm
command "   ▸ man isotop " xterm -rv -e man isotop
command " ___CWMSESSION" ""
command "   . ___CWMEDITCONFIG " "xterm -e '$EDITOR $HOME/.cwmrc'"
command "   . ___CWMLOCK " 'xscreensaver-command -lock'
command "   . ___CWMSUSPEND " zzz
command "   . ___CWMREBOOT " "doas /sbin/reboot now"
command "   . ___CWMHALT " "doas /sbin/shutdown -hp now"


