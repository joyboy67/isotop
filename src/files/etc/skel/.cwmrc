# nord-style colorscheme
color activeborder "#8FBCBB"
color inactiveborder "#3b4252"
color font "#D8DEE9"
color selfont "#2E3440"
color menubg "#2E3440"
color menufg "#81A1C1"
color urgencyborder "#BF616A"
color groupborder "#A3BE8C"
color ungroupborder "#BF616A"

borderwidth 2
gap 22 0 0 0     # margin top for xclock
fontname "DejaVu Sans Mono:pixelsize=14"

# Options
moveamount 30
snapdist 20
sticky yes
command term xterm
command lock "xlock -mode space"

# Windows rules
ignore dmenu
ignore xmessage
ignore xclock
ignore Dunst

# Groups, find them by clicking ong a window after running "xprop"
# autogroup n "name,class"
#autogroup 2 Mail
#autogroup 1 Navigator, Firefox
#autogroup 1 chromium-browser, Chromium-browser
autogroup 0 xclock, XClock

# Mouse
# Alt+ right click to resize
bind-mouse M-2          window-lower
bind-mouse M-3          window-resize

# scroll on background change volume
bind-mouse 0-4 "mixerctl outputs.master=+10"
bind-mouse 0-5 "mixerctl outputs.master=-10"

# keyboard
bind-key M-F4  window-delete

# Move : M-h/j/k/l
# Resize : M-S-h/j/k/l
# Move on screen edge
bind-key MS-j window-snap-down
bind-key MS-k window-snap-up
bind-key MS-h window-snap-left
bind-key MS-l window-snap-right

# tiling !!!
bind-key M-t window-vtile
bind-key MS-t window-htile

# app menu alt-f2
bind-key M-F2 menu-exec
# dmenu_run
bind-key M-p 'dmenu_run_i' 
# Find window
# label with M-C-n to find window with this menu
bind-key M-f menu-window
# Send to group
bind-key M-g "dgroupwin focused"
# cycle group
bind-key M-space group-cycle


# shortcuts

bind-key XF86AudioRaiseVolume "mixerctl outputs.master=+10"
bind-key XF86AudioLowerVolume "mixerctl outputs.master=-10"
bind-key M-s dsch
bind-key M-x dfm

# MENU
command " ___CWMWIN" ""
command "   + ___CWMWINMAX" "maxwin"
command "   x ___CWMWINCLOSE" "xdotool selectwindow windowclose"
command "   ? ___CWMWINHELP" "cwmhelp"
command " ___CWMSHORTCUTS" ""
command "   ▸ ___CWMWEB " web 
command "   ▸ ___CWMMAILS " claws-mail 
command "   ▸ ___CWMFILES " pcmanfm
command "   ▸ ___CWMOFFICE " libreoffice
command "   ▸ ___CWMMUSIC " "xterm -e cmus-in-tmux"
command "   ▸ ___CWMMIXER " "xterm -maximized -e cmixer"
command "   ▸ ___CWMXTERM " xterm
command "   ▸ ___CWMPKGMGR " "gdoas pkg_mgr"
command "   ▸ man isotop " "xterm -rv -e ___CWMMANISOTOP"
command " ___CWMSESSION" ""
command "   . ___CWMEDITCONFIG " "xterm -e '$EDITOR $HOME/.cwmrc'"
command "   . ___CWMLOGOUT " "pkill cwm"
command "   . ___CWMLOCK " 'xlock -mode space'
command "   . ___CWMSUSPEND " zzz
command "   . ___CWMREBOOT " "doas /sbin/reboot"
command "   . ___CWMHALT " "doas /sbin/shutdown -hp now"


