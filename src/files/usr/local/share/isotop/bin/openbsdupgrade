#!/bin/sh
# download openup and run it after syspatch and fw_update

networkcheck || 
if [ $? -ne 0 ]; then
	echo "No internet connexion avaiable..."
	echo "Press enter to exit"
	read a
	exit 1
else
	echo "> syspatch"
	doas syspatch

	echo "> fw_update"
	doas fw_update

	echo "> openup"
	if [ ! -f /usr/local/bin/openup ]; then
		doas ftp -o /usr/local/bin/openup https://stable.mtier.org/openup 
		doas chmod +x /usr/local/bin/openup
		doas openup
	else
		doas openup
	fi
	echo "Done! :)"
	echo "Press enter to exit"
	read a
fi
exit 0
