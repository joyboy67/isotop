#!/bin/sh
# download openup and run it after syspatch

/usr/local/bin/networkcheck
if [ $? -ne 0 ]; then
	echo "No internet connexion avaiable..."
	sleep 3
	exit 1
fi

echo "===> Running syspatch"
doas syspatch

if [ ! -f /usr/local/bin/openup ]; then
    doas ftp -o /usr/local/bin/openup https://stable.mtier.org/openup 
    doas chmod +x /usr/local/bin/openup
    doas openup
else
    doas openup
fi

exit 0
